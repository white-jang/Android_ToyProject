<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알라딘, 2019"
                android:textSize="30dp"
                android:fontFamily="@font/malgunbd"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="감독 | 가이 리치"
                android:textSize="15dp"
                android:fontFamily="@font/malgunsl"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/aladdin_pic1"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/aladdin_pic2"
            android:layout_marginTop="15dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/aladdin_pic3"
            android:layout_marginTop="15dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/aladdin_pic4"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="“거짓으로 얻는 게 많을수록,\n 진짜로 얻는 것은 적어지지…”"
            android:textSize="30dp"
            android:fontFamily="@font/papyrus_bold"
            android:textColor="@color/green"
            android:layout_marginLeft="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RatingBar
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="4.5"
                android:stepSize="0.5"
                android:max="5"
                android:theme="@style/RatingBar"
                />

            <TextView
                android:id="@+id/starPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="별점 | 4.5"
                android:textColor="#000"
                android:textSize="15dp"
                android:fontFamily="@font/malgunsl"
                android:layout_gravity="center"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="머나먼 사막 속 신비의 아그라바 왕국의 시대.\n
좀도둑 ‘알라딘’은 마법사 ‘자파’의 의뢰로 마법 램프를 찾아 나섰다가\n
주인에게 세 가지 소원을 들어주는 지니를 만나게 되고,\n
자스민 공주의 마음을 얻으려다 생각도 못했던 모험에 휘말리게 되는데…"
            android:fontFamily="@font/malgunsl"
            android:layout_margin="3dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/moreLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="> 더보기"
            android:fontFamily="@font/malgunbd"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>
</ScrollView>