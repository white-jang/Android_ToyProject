<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/dxmobr"
            android:gravity="center_horizontal"
            android:text="이달의 영화"
            android:textColor="@color/coral"
            android:textSize="30dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp" >

            <TableRow>
                <ImageButton
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginVertical="3dp"
                    android:paddingLeft="10dp"
                    android:onClick="parasiteListener"
                    android:id="@+id/parasite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:src="@drawable/parasite" />

                <ImageButton
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginVertical="3dp"
                    android:onClick="aladdinListener"
                    android:id="@+id/aladdin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:src="@drawable/aladdin" />
            </TableRow>
            <TableRow>
                <ImageButton
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginVertical="3dp"
                    android:paddingLeft="10dp"
                    android:onClick="avatarListener"
                    android:id="@+id/avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:src="@drawable/avatar" />

                <ImageButton
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginVertical="3dp"
                    android:onClick="titanicListener"
                    android:id="@+id/titanic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:src="@drawable/titanic" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coral"
            >

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:adjustViewBounds="true"
                android:background="#00ff0000"
                android:src="@drawable/clock"
                android:onClick="clockListener" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

