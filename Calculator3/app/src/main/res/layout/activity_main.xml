<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="5dp"
    tools:context=".MainActivity">
    <EditText android:id="@+id/number"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:gravity="right"
        android:inputType="number"
        android:singleLine="true"
        android:cursorVisible="true"
        android:textCursorDrawable="@color/white"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/number"
        android:layout_weight="1" >
        <TableRow android:layout_weight="1">
            <Button android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_margin="2dp"
                android:layout_weight="3" />
            <Button android:id="@+id/delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_margin="2dp"
                android:text="DELETE"
                android:textSize="45px"
                android:textColor="@color/white"
                android:layout_weight="1" />
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button android:id="@+id/n7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                android:padding="20dp"
                android:layout_margin="2dp"
                android:text="7"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_weight="1" />
            <Button android:id="@+id/n8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                android:padding="20dp"
                android:layout_margin="2dp"
                android:text="8"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_weight="1" />
            <Button android:id="@+id/n9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                android:padding="20dp"
                android:layout_margin="2dp"
                android:text="9"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_weight="1" />
            <Button android:id="@+id/div"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:padding="20dp"
                android:layout_margin="2dp"
                android:text="รท"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_weight="1" />
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button android:id="@+id/n4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                android:padding="20dp"
                android:layout_margin="2dp"
                android:text="4"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_weight="1" />
            <Button android:id="@+id/n5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                android:padding="20dp"
                android:layout_margin="2dp"
                android:text="5"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_weight="1" />
            <Button android:id="@+id/n6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                android:padding="20dp"
                android:layout_margin="2dp"
                android:text="6"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_weight="1" />
            <Button android:id="@+id/mul"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:padding="20dp"
                android:layout_margin="2dp"
                android:text="ร"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_weight="1" />
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button android:id="@+id/n1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                android:padding="20dp"
                android:layout_margin="2dp"
                android:text="1"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_weight="1" />
            <Button android:id="@+id/n2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                android:padding="20dp"
                android:layout_margin="2dp"
                android:text="2"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_weight="1" />
            <Button android:id="@+id/n3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                android:padding="20dp"
                android:layout_margin="2dp"
                android:text="3"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_weight="1" />
            <Button android:id="@+id/sub"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:padding="20dp"
                android:layout_margin="2dp"
                android:text="-"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_weight="1" />
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button android:id="@+id/dot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                android:padding="20dp"
                android:layout_margin="2dp"
                android:text="."
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_weight="1" />
            <Button android:id="@+id/n0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                android:padding="20dp"
                android:layout_margin="2dp"
                android:text="0"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_weight="1" />
            <Button android:id="@+id/result"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:padding="20dp"
                android:layout_margin="2dp"
                android:text="="
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_weight="1" />
            <Button android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:padding="20dp"
                android:layout_margin="2dp"
                android:text="+"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>
</RelativeLayout>